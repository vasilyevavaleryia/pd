@{
    ViewData["Title"] = "Panel administracyjny";
}

<div class="container container-admin mt-5">
    <div class="row">
        <div class="col-12 text-center my-3">
            <h3 class="border-bottom-gold d-block w-50 mx-auto py-3 mb-3">Panel administracyjny</h3>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary d-block w-100 py-7" asp-controller="Administrator" asp-action="ManageWines">
                <span class="fw-bold h3">
                    Zarządzaj winami
                </span>
            </a>
        </div>
        <div class="col-12 col-md-6 mt-3 mt-md-0">
            <a class="btn btn-info d-block w-100 py-7 fw-bold h3" asp-controller="Administrator" asp-action="ManageUsers">
                <span class="fw-bold h3">
                    Przeglądaj użytkowników
                </span>     
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mt-3">
            <a class="btn btn-warning d-block w-100 py-7 fw-bold h3" asp-controller="Administrator" asp-action="GetOrders">
                <span class="fw-bold h3">
                    Przeglądaj zamówienia
                </span>
            </a>
        </div>
    </div>
</div>