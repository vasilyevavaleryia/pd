<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Valeryia Vasilyeva" />
    <title>@ViewData["Title"] - ProProsecco</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/fontawesome-free-6.1.2-web/css/all.css" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/favicon/site.webmanifest">
</head>
<body class="d-flex flex-column min-vh-100 p-0 m-0">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light mb-3 py-2">
            <div class="container-fluid text-center">
                <a class="navbar-brand nav-link" asp-area="" asp-controller="Shop" asp-action="Index">
                    <img src="~/img/logo_navbar.png" alt="Logo strony ProProsecco" class="logo-navbar" />
                </a>
                <div>
                    <h1>
                        ProProsecco
                    </h1>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid no-gutters mx-0 px-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-container text-center mt-auto">
        <div class="container">
            <div class="h4 text-purple-dark pt-4 pb-3">
                Praca dyplomowa / Valeryia Vasilyeva / Indeks 16868 / Rok akademicki 2021/2022
            </div>
            <div class="w-50 mx-auto border-top-gold text-muted py-3">
                &copy; Wszelkie prawa zastrzeżone
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
